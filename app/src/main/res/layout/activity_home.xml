<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btnout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:onClick="deslogar"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="138dp" />



        <Button
            android:id="@+id/btnuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="profile"
            android:text="Profile"
            android:layout_marginLeft="210dp"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="138dp" />

    </LinearLayout>


    <EditText
        android:id="@+id/edNota"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:ems="10"
        android:hint="Nota"
        android:inputType="text" />

    <Button
        android:id="@+id/btnAdicionarNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="adicionarNota"
        android:text="Adicionar Nota"
        app:layout_constraintBottom_toTopOf="@+id/btnVerNotas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnVerNotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:onClick="verNotas"
        android:text="Ver Notas"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <LinearLayout
        android:id="@+id/lnNotas"
        android:layout_width="413dp"
        android:layout_height="250dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnAdicionarNota"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>